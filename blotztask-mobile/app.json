{
  "expo": {
    "name": "BlotzTask",
    "icon": "./assets/images-png/blotz-icon.png",
    "slug": "BlotzTask",
    "owner": "blotz",
    "version": "1.0.0",
    "runtimeVersion": "1.0.0",
    "orientation": "portrait",
    "scheme": "blotztask",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.Blotz.BlotzTask",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSPhotoLibraryUsageDescription": "Allow BlotzTask to access your photos so you can attach images to tasks.",
        "NSPhotoLibraryAddUsageDescription": "Allow BlotzTask to save exported images to your photo library.",
        "NSCameraUsageDescription": "Allow BlotzTask to use the camera for calls and taking photos.",
        "NSSpeechRecognitionUsageDescription": "We use speech recognition so you can add tasks by voice.",
        "NSMicrophoneUsageDescription": "Allow BlotzTask to use the microphone for voice and video calls.",
        "NSMotionUsageDescription": "This app uses motion data to simulate gravity and allow capsule toys to move when you shake your phone.",
        "NSLocationWhenInUseUsageDescription": "Allow BlotzTask to use your location to check regional availability."
      },
      "appleTeamId": "LXC29JARY5",
      "icon": "./assets/images-png/blotz-icon.png"
    },
    "android": {
      "edgeToEdgeEnabled": true,
      "package": "com.blotz.blotztask",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static"
    },
    "plugins": [
      "expo-router",
      "expo-speech-recognition",
      "expo-secure-store",
      [
        "expo-dev-client",
        {
          "launchMode": "most-recent"
        }
      ],
      [
        "react-native-auth0",
        {
          "domain": "dev-k72xachs0fr6nebp.us.auth0.com"
        }
      ],
      "expo-font",
      "expo-localization",
      [
        "@sentry/react-native/expo",
        {
          "url": "https://sentry.io/",
          "project": "react-native",
          "organization": "nicoles-project"
        }
      ],
      "expo-audio",
      [
        "./plugins/withCustomGradleProperties"
      ],
      [
        "./plugins/withAzureSpeechAndroid"
      ],
      "expo-asset"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "8e8ffbf2-206b-4d9b-b11c-a387b49a3126"
      }
    },
    "updates": {
      "enabled": false
    }
  }
}
