{
  "expo": {
    "name": "BlotzTask",
    "icon": "./assets/images/blotz-icon.png",
    "slug": "BlotzTask",
    "owner": "blotz",
    "version": "1.0.0",
    "runtimeVersion": "1.0.0",
    "orientation": "portrait",
    "scheme": "blotztask",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.Blotz.BlotzTask",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSPhotoLibraryUsageDescription": "Allow BlotzTask to access your photos so you can attach images to tasks.",
        "NSPhotoLibraryAddUsageDescription": "Allow BlotzTask to save exported images to your photo library.",
        "NSCameraUsageDescription": "Allow BlotzTask to use the camera for calls and taking photos.",
        "NSSpeechRecognitionUsageDescription": "We use speech recognition so you can add tasks by voice.",
        "NSMicrophoneUsageDescription": "Allow BlotzTask to use the microphone for voice and video calls."
      },
      "appleTeamId": "LXC29JARY5",
      "icon": "./assets/images/blotz-icon.png"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.Blotz.BlotzTask"
    },
    "web": {
      "bundler": "metro",
      "output": "static"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/blotz-logo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-secure-store",
      [
        "expo-dev-client",
        {
          "launchMode": "most-recent"
        }
      ],
      [
        "react-native-auth0",
        {
          "domain": "dev-k72xachs0fr6nebp.us.auth0.com"
        }
      ],
      "patch-project",
      "expo-font",
      "expo-localization"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "8e8ffbf2-206b-4d9b-b11c-a387b49a3126"
      }
    },
    "updates": {
      "url": "https://u.expo.dev/99062285-944a-4758-ab2c-641d3733c0ca"
    }
  }
}
